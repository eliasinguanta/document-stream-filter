FROM python:3.9

# Setze das Arbeitsverzeichnis
WORKDIR /app

# Installiere System-Dependencies (inkl. JDK)
RUN apt-get update && apt-get install -y \
    default-jdk \
    curl \
    unzip \
    procps \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# AWS-Umgebungsvariablen (Achtung: f√ºr dev okay, aber nie Keys hardcoden!)
