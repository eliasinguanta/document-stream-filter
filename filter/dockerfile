FROM python:3.9

WORKDIR /app


# System-Updates und Java + Tools installieren
RUN apt-get update
RUN apt-get install -y default-jdk procps
RUN apt-get clean

RUN pip install fastapi uvicorn
RUN pip install "fastapi[all]"
RUN pip install pyspark


COPY . .

EXPOSE 3002

CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "3002", "--reload"]

